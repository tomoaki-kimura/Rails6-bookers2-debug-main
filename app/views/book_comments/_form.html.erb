<%= form_with(model: book_comment, local: false, id: "book_comment__form") do |f| %>
  <%= hidden_field_tag :book_id, book.id %>
  <div class="form-group">
    <div id="book_comment__form--comment-errors"></div>
    <%= f.text_area :comment, class: 'form-control', id: 'book_comment__comment', rows: 6 %>
  </div>
  <div class="form-group">
    <%= f.submit "送信", class: 'btn btn-secondary' %>
  </div>
<% end %>